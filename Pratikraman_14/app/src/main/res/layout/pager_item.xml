<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/content_display_path"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#f7f7f7"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.example.home.pratikraman_14.HomePage.DisplayPath.DisplayPathActivity"
tools:showIn="@layout/activity_display_path">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textViewPath"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/colorText"
        android:textSize="17sp" />
</ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.7">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_height="0dp"
            android:layout_weight="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
        <LinearLayout
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:background="@drawable/back"
            android:id="@+id/prevSong"
            android:layout_weight="0.7"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>
        <Button
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:background="@drawable/play_button"
            android:id="@+id/play"
            android:layout_weight="0.7"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>
        <LinearLayout
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:background="@drawable/next"
            android:id="@+id/nextSong"
            android:layout_weight="0.7"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_gravity="right"
            android:layout_weight="0.25"
            android:textSize="10sp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/textViewCurrentTime"/>
        <SeekBar
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/seekbar"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_marginTop="7dp"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:layout_gravity="left"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="0.5"
            android:id="@+id/textViewTotalTime"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
